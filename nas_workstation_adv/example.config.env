# --- config.env ---

# User & System
DEFAULT_USERNAME="your_main_username"
USERS="alice,bob"  # comma-separated additional users (excluding default user)
DISK_LABEL="nasdrive"
MOUNT_POINT="/mnt/nasdrive"

# Backup
BACKUP_ENABLED=true
BACKUP_PATH="/mnt/nasdrive/backups"
RESTIC_REPO="$BACKUP_PATH/restic-repo"
RESTIC_PASSWORD="supersecurepassword"

# DuckDNS & SSL
DUCKDNS_TOKEN=""
DUCKDNS_DOMAIN=""

# WireGuard VPN
WG_ENABLED=true
WG_INTERFACE="wg0"
WG_PORT=51820

# ZRAM
ZRAM_ENABLED=true
ZRAM_SIZE_MB=2048

# SMART Monitoring
SMART_ENABLED=true

# Services Ports (firewall)
PORT_SSH=22
PORT_HTTP=80
PORT_HTTPS=443
PORT_JELLYFIN=32400
PORT_SYNCTHING=8384
PORT_COCKPIT=9090
PORT_WIREGUARD=$WG_PORT

# Tor Hidden Service for Nextcloud
TOR_SERVICE_DIR="/var/lib/tor/nextcloud_hidden"

